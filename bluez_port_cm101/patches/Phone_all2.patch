+    private void adjustOtherHeadsetPriorities(BluetoothDevice connectedDevice) {
+       for (BluetoothDevice device : mAdapter.getBondedDevices()) {
+          if (getPriority(device) >= BluetoothHeadset.PRIORITY_AUTO_CONNECT &&
