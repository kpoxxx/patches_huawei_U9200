+    /** helper function for creating PDU response */
+    private static int swapBCDForTime( int inbyte )
+    {
+        inbyte = inbyte & 0xFF;
+
+        int high = inbyte / 10;
+        return ((inbyte - (high * 10)) << 4) | high;
+    }
