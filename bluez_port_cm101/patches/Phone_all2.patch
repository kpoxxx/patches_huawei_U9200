+                }
+                break;
+            case BATTERY_CHANGED:
+                mBluetoothPhoneState.updateBatteryState((Intent) msg.obj);
+                break;
+            case SIGNAL_STRENGTH_CHANGED:
+                mBluetoothPhoneState.updateSignalState((Intent) msg.obj);
+                break;
+            }
+        }
